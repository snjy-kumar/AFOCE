# Production Environment Variables
# ⚠️  SECURITY WARNING: Never commit this file with real values!
# ⚠️  Use secrets management in production (AWS Secrets Manager, Vault, etc.)

# ============================================
# SERVER CONFIGURATION
# ============================================
NODE_ENV=production
PORT=5000

# ============================================
# DATABASE (PostgreSQL)
# ============================================
# Use connection pooling in production
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=public&connection_limit=10&pool_timeout=20
DATABASE_URL="postgresql://afoce_user:STRONG_PASSWORD_HERE@db-host:5432/afoce_production?schema=public&sslmode=require"

# ============================================
# SECURITY & AUTHENTICATION
# ============================================
# Generate with: openssl rand -base64 64
JWT_SECRET=REPLACE_WITH_64_CHAR_RANDOM_STRING_FROM_OPENSSL_RAND_BASE64_64
JWT_EXPIRES_IN=7d

# ============================================
# CORS & NETWORKING
# ============================================
# Your production frontend URL
CORS_ORIGIN=https://yourdomain.com

# ============================================
# FILE UPLOADS
# ============================================
UPLOAD_DIR=/var/app/uploads
MAX_FILE_SIZE=10485760

# ============================================
# REDIS (Required for BullMQ)
# ============================================
REDIS_HOST=redis-host.production.com
REDIS_PORT=6379
REDIS_PASSWORD=STRONG_REDIS_PASSWORD
REDIS_TLS=true

# ============================================
# EMAIL / SMTP (Production Email Service)
# ============================================
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_SECURE=true
SMTP_USER=apikey
SMTP_PASSWORD=YOUR_SENDGRID_API_KEY

EMAIL_FROM=AFOCE Accounting <noreply@yourdomain.com>
EMAIL_REPLY_TO=support@yourdomain.com

# ============================================
# WORKFLOW & BACKGROUND JOBS
# ============================================
ENABLE_NOTIFICATIONS=true
ENABLE_SCHEDULED_JOBS=true
ENABLE_AUDIT_LOGGING=true
JOB_QUEUE_RATE_LIMIT=500
NOTIFICATION_RETENTION_DAYS=90

# ============================================
# MONITORING & LOGGING
# ============================================
LOG_LEVEL=info
LOG_FILE_MAX_SIZE=20971520
LOG_FILE_MAX_FILES=14

# ============================================
# RATE LIMITING (Production)
# ============================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ============================================
# OPTIONAL: THIRD-PARTY INTEGRATIONS
# ============================================
# Sentry Error Tracking
SENTRY_DSN=https://YOUR_SENTRY_DSN@sentry.io/PROJECT_ID
SENTRY_ENVIRONMENT=production

# ============================================
# BACKUP & DISASTER RECOVERY
# ============================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=afoce-backups-production
AWS_ACCESS_KEY_ID=YOUR_AWS_KEY
AWS_SECRET_ACCESS_KEY=YOUR_AWS_SECRET
AWS_REGION=ap-south-1
